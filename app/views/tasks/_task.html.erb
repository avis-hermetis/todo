
    <div class = "panel panel-info">
      <div class = "panel-heading">
        <%= link_to edit_task_path(task) do %>
          Created <%= time_ago_in_words(task.created_at) %> ago
        <% end %>
        <%= link_to "X", task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: "pull-right" %>
      </div>
      <div class = "panel-body"><%= task.content %></div>
      <div class = "panel-footer">
        <div class="btn-group btn-group-justified">
          <% case task.state %>
            <% when "doing" %>
              <%= link_to "<i class= 'fa fa-arrow-circle-left'> </i>".html_safe, change_task_path(task, state: 'to_do'), method: :put, class: "btn btn-info btn-md brn-block" %>
              <%= link_to "<i class= 'fa fa-arrow-circle-right'> </i>".html_safe, change_task_path(task, state: 'done'), method: :put, class: "btn btn-info btn-md brn-block" %>
            <% when "to_do" %>
              <%= link_to "<i class= 'fa fa-arrow-circle-right'> </i>".html_safe, change_task_path(task, state: 'doing'), method: :put, class: "btn btn-info btn-md brn-block" %>
            <% else %>
              <%= link_to "<i class= 'fa fa-arrow-circle-left'> </i>".html_safe, change_task_path(task, state: 'doing'), method: :put, class: "btn btn-info btn-md brn-block" %>
         <% end %>
        </div>
      </div>
    </div>


